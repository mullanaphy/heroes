{% set site = {'title': 'Heroes of Cuteness'} %}
{% set canonical_url = canonical_url is defined ? canonical_url : app.request.uri %}
<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{% block title %}{{ site.title }}{% endblock %}</title>
    <link rel="canonical" href="{{ canonical_url }}">
    {% block head_meta %}
    {% endblock %}
    {% block stylesheets %}
        <link href="/assets/css/app.css" rel="stylesheet" type="text/css"/>
    {% endblock %}
</head>
<body>
<div class="container">
    <div class="logo">
        <a href="{{ path('index') }}"><img alt="Heroes of Cuteness!" src="/assets/img/logo.jpg"
                                             class="img-fluid"/></a>
    </div>
</div>
{% block body %}
{% endblock %}
{% block footer %}
    <div class="container">
        <hr>
        <div class="row align-items-center">
            <div class="col-md-5">&copy; <a href="https://initials.kim">Keira</a> &amp; <a
                        href="https://john.mu">John</a> 2024<span
                        class="hidden-xs">, <em>All Rights Reserved</em></span>.
            </div>
            <div class="col-md-7 ms-auto">
                <ul class="nav justify-content-end">
                    <li class="nav-item"><a class="nav-link" href="https://herosofcuteness.bsky.social"><span
                                    class="bi bi-twitter"></span><span
                                    class="hidden-xs"> Facebook</span></a></li>
                    <li class="nav-item"><a class="nav-link" href="https://instagram.com/heroesofcuteness"><span
                                    class="bi bi-instagram"></span><span
                                    class="hidden-xs"> Instagram</span></a></li>
                    <li class="nav-item"><a class="nav-link" href="https://threads.net/@heroesofcuteness"><span
                                    class="bi bi-threads"></span><span
                                    class="hidden-xs"> Threads</span></a></li>
                    <li class="nav-item"><a class="nav-link" href="https://github.com/mullanaphy/heroes"><span
                                    class="bi bi-github"></span><span
                                    class="hidden-xs"> Source Code</span></a></li>
                </ul>
            </div>
        </div>
    </div>
{% endblock %}
{% block javascripts %}
    <script src="/assets/js/bootstrap.min.js" type="text/javascript"></script>
{% endblock %}
</body>
</html>
